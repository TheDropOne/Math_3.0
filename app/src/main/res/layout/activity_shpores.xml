<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="by.thedrop.math.Shpores">

    <TextView
        android:id="@+id/labelShpores"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:gravity="center"
        android:text="vk.com/wowshpori"
        android:textColor="#2e8ffd"
        android:textSize="27sp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_below="@+id/labelShpores"
        >

        <TextView
            android:id="@+id/descriptionShpores"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:text="Лучшие шпаргалки по всем предметам с доставкой по Минску и почтой по всей Беларуси! Низкие цены, огромное количество отзывов и лучшее качество! Скидки только для вас!"
            android:textColor="#000000"
            android:textSize="24sp" />
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButtonShpori"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/shpori" />

</RelativeLayout>
